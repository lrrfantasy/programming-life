.bar
  display: inline-block
  position: relative;
  width: 400px
  height: 20px
  border-radius: 10px
  line-height: 20px
  color: #fff
  background: #888
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.6)
  vertical-align: middle

.fill
  background: #00aa90
  height: inherit
  border-radius: inherit

.info
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  text-align: center
